
import sys
import pymysql
import pandas as pd
import flask as Flask

class DataBase():

    ## 開啟資料庫
    def OpenDB(self):
        conn = pymysql.connect(
            host='127.0.0.1',
            user='root',
            password='0604',
            database='project',
            charset='utf8'
        )
        return conn

    ## 新增資料庫
    def IncsertDB(self,sql):
        conn = OpenDB(self)
        cursor = conn.cursor()
        cursor.execute(sql)
        return '新增完成'

    ## 搜尋資料庫
    def SearchDB(self,sql):
        conn = DataBase.OpenDB(self)
        cursor = conn.cursor()
        cursor.execute(sql)
        data = cursor.fetchall()
        return data

db = DataBase()
SQL  = 'SELECT * FROM movie WHERE MNum=10'

print(db.SearchDB(SQL))